<html lang="en">
<head>
  <title>Lunenburg</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>

<div class="container">
  <h2>Bestelorder</h2>
  <div class="pull-right" style="width: 8%">
  <h5><span class="glyphicon glyphicon-chevron-left"></span><a href="{{ path('inkoperbestelopdracht') }}"><font color="black"> Terug</font></a></h5>
</div>

  <div class="pull-left" style="width: 8%">
  <h5><button class="btn btn btn-primary"><span class="glyphicon glyphicon-home"></span><a href="{{ path('inkoperhome') }}"><font color="white"> Home</font></a></button></h5>
</div>

  <table class="table table-striped table-hover">

    {% for bestelorder in bestelorders %}
    <thead>
      <tr>
        <th><h4><u>Leverancier:</u></h4></th>
        <td><h4><b>{{ bestelorder.naamleverancier }}</b></h4></td>
     </tr>
      </tr>
      <tr>
        <th><h4><u>Bestelordernummer:</u></h4></th>
        <td><h4><b>{{ bestelorder.bestelordernummer }}</b></h4></td>
        <td><button class="btn btn-info"><span class="glyphicon glyphicon-plus"></span><a href="{{ path('inkopernieuwbestelregel',{'bestelordernummer':bestelorder.bestelordernummer}) }}"><font color="white"> Artikel toevoegen aan bestelorder</font></a></button></td>
      </tr>
    </thead>
    <tbody>
      <tr>
      <th>Artikelnummer</th>
      <th>Omschrijving</th>
      <th>Hoeveelheid</th>
    </tr>
    <tr>
      {% for bestelregel in bestelregels %}
        {% if(bestelorder.bestelordernummer == bestelregel.bestelordernummer) %}
      <td>{{ bestelregel.artikelnummer }}</td>
      {% for artikel in artikelen %}
      {% if(bestelregel.artikelnummer == artikel.artikelnummer) %}
      <td>{{ artikel.omschrijving }}</td>
      {% endif %}
      {% endfor %}
      <td>{{ bestelregel.hoeveelheid }}</td>
      </tr>
        {% endif %}
    {% endfor %}
    </tbody>
    {% endfor %}
    <tr>
    </tr>
  </table>
</div>

</body>
</html>
