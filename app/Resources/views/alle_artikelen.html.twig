{% extends 'base.html.twig' %}
{% block head %}
    <link rel="stylesheet" href="interface.css">
{% endblock %}
{% block body %}
    <style>
        table{
            border-collapse: collapse;
        }
        table, th, td {
            border: 1px solid black;
            text-align: left;
            padding: 5px;
        }
    </style>
	<h1> Overzicht van alle artikelen</h1>

        <table class="alle_artikelen">
                <tr>
                    <th>Artikelnummer</th>
                    <th>Omschrijving</th>
                    <th>Magazijnlocatie</th>
                    <th>Voorraad</th>
                    <th>Bestelserie</th>
                    <th>Artikelinformatie wijzigen</th>
                </tr>
    {% for artikel in artikelen %}
            <tr>
                <td>{{ artikel.artikelnummer }}</td>
                <td>{{ artikel.omschrijving }}</td>
                <td>{{ artikel.magazijnlocatie }}</td>
                <td>{{ artikel.voorraadaantal }}</td>
                <td>{{ artikel.bestelserie }}</td>
                <td><a href="{{ path('wijzigartikel',{'artikelnummer':artikel.artikelnummer}) }}">Wijzigen</a></td>
            </tr>
    {% endfor %}
        </table>
{% endblock %}
