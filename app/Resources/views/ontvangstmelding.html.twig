<html lang="en">
<head>
  <title>Lunenburg</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>

<div class="container">
  <h2>Ontvangstmeldingen</h2>
  <div class="pull-left" style="width: 8%">
  <h5><button class="btn btn btn-primary"><span class="glyphicon glyphicon-home"></span><a href="{{ path('magazijnmeesterhome') }}"><font color="white"> Home</font></a></button></h5>
  </div>

  <table class="table table-striped table-hover">

    {% for goederenontvangst in goederen %}
    <thead>
      <tr>
        <th><h4><u>Leverancier:</u></h4></th>
        <td><b><h4>{{ goederenontvangst.naamleverancier }}</b></h4></td>
        <th><h4><u>Ontvangstmeldingnummer:</u></h4></th>
        <td><b><h4>{{ goederenontvangst.goederenontvangstid }}</b></h4></td>
      </tr>
      <tr>
        <th><h4><u>Ontvangstdatum:</u></h4></th>
        <td><b><h4>{{ goederenontvangst.ontvangstdatum|date('d-m-Y') }}</b></h4></td>
        <td><h5><button class="btn btn-info"><span class="glyphicon glyphicon-plus"></span><a href="{{ path('magazijnmeesternieuwontvangstregel',{'goederenontvangstid':goederenontvangst.goederenontvangstid}) }}"><font color="white"> Artikel toevoegen aan ontvangstmelding</font></a></button></h5></td>

      </tr>
    </thead>
    <tbody>
      <tr>
      <th>Artikelnummer</th>
      <th>Omschrijving</th>
      <th>Hoeveelheid</th>
      <th>Kwaliteit</th>
    </tr>
    <tr>
      {% for ontvangstregel in ontvangstregels %}
      {% if(goederenontvangst.goederenontvangstid == ontvangstregel.goederenontvangstid) %}
      <td>{{ ontvangstregel.artikelnummer }}</td>
      {% for artikel in artikelen %}
      {% if(ontvangstregel.artikelnummer == artikel.artikelnummer) %}
      <td>{{ artikel.omschrijving }}</td>
      {% endif %}
      {% endfor %}
      <td>{{ ontvangstregel.hoeveelheid }}</td>
      <td>{{ ontvangstregel.kwaliteit }}</td>
      </tr>
      {% endif %}
      {% endfor %}
    </tbody>
    {% endfor %}
    <tr>
    </tr>
  </table>
</div>

</body>
</html>
