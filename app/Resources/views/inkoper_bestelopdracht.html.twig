<body>

<div class="container">
  <h2>Bestelopdrachten</h2>
  <div class="pull-left" style="width: 8%">
  <h5><button class="btn btn btn-primary"><span class="glyphicon glyphicon-home"></span><a href="{{ path('inkoperhome') }}"><font color="white"> Home</font></a></button></h5>
  </div>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th><h4><b>Leverancier</b></h4></th>
        <th><h4><b>Bestelordernummer</b></h4></th>
        <th><h4><b>Informatie</b></h4></th>
      </tr>
      <tr>
          {% for bestelorder in bestelorders %}
        <td><h4>{{ bestelorder.naamleverancier }}</h4></td>
        <td><h4>{{ bestelorder.bestelordernummer }}</h4></td>
        <td><span class="glyphicon glyphicon-plus"></span><a href="{{ path('inkoperallebestelorders',{'bestelordernummer':bestelorder.bestelordernummer}) }}"><font color="black"> Meer informatie</font></a></td>
     </tr>
      </tr>
    </thead>
    {% endfor %}
    <tr>
    </tr>
  </table>
</div>

</body>
</html>
