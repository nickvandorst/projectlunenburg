<html lang="en">
<head>
  <title>Lunenburg</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>

<div class="container">
  <h2>Bestelopdrachten</h2>
  <div class="pull-left" style="width: 8%">
  <h5><button class="btn btn btn-primary"><span class="glyphicon glyphicon-home"></span><a href="{{ path('inkoperhome') }}"><font color="white"> Home</font></a></button></h5>
  </div>

  <div class="pull-left" style="width: 8%">
  <h5><button class="btn btn-info"><span class="glyphicon glyphicon-plus"></span><a href="{{ path('inkopernieuwbestelregel') }}"><font color="white"> Artikel toevoegen aan bestelorder</font></a></button></h5>
  </div>

  <table class="table table-striped table-hover">

    {% for bestelorder in bestelorders %}
    <thead>
      <tr>
        <th><h4><u><font color="blue">Leverancier:</font></u></h4></th>
        <td><h4><font color="blue">{{ bestelorder.naamleverancier }}</font></h4></td>
      </tr>
      <tr>
        <th><h4><u><font color="blue">Bestelordernummer:</font></u></h4></th>
        <td><h4><font color="blue">{{ bestelorder.bestelordernummer }}</font></h4></td>
      </tr>
    </thead>
    <tbody>
      <tr>
      <th>Artikelnummer</th>
      <th>Omschrijving</th>
      <th>Hoeveelheid</th>
    </tr>
    <tr>
      {% for bestelregel in bestelregels %}
      <td>{{ bestelregel.artikelnummer }}</td>
      {% for artikel in artikelen %}
      {% if(bestelregel.artikelnummer == artikel.artikelnummer) %}
      <td>{{ artikel.omschrijving }}</td>
      {% endif %}
      {% endfor %}
      <td>{{ bestelregel.hoeveelheid }}</td>
      </tr>
      {% endfor %}
    </tbody>
    {% endfor %}
    <tr>
    </tr>
  </table>
</div>

</body>
</html>
