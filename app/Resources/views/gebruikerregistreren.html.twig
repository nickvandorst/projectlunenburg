{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h1>Registreer een nieuwe gebruiker</h1>

                {{ form_start(form) }}
                {{ form_row(form.gebruikersnaam) }}
                {{ form_row(form.functie, {'label': 'Functie'}) }}
                {{ form_row(form.wachtwoord.first,{ 'label': 'Wachtwoord'}) }}	
                {{ form_row(form.wachtwoord.second,{ 'label': ' Herhaal wachtwoord'}) }}
                <button type="submit" class="btn btn-primary" formnovalidate>Registeren</button>
				{{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}