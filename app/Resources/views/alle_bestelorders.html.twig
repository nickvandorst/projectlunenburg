            <th>Artikelnummer</th>
            <th>Omschrijving</th>
            <th>Hoeveelheid</th>

        </tr>
        </thead>
        <tbody>
        {% for artikel in artikelen %}
        <tr>
            <td>{{ bestelorder.bestelordernummer }}</td>
            <td>{{ bestelorder.naamleverancier }}</td>
            <td>{{ bestelorder.artikelnummer }}</td>
            <td>{{ bestelorder.omschrijving }}</td>
            <td>{{ bestelorder.hoeveelheod }}</td>

            <td><a href="{{ path('inkoperwijzigartikel',{'artikelnummer':artikel.artikelnummer}) }}">Wijzigen</a></td></td>
        </tr>
        </tbody>
        {% endfor %}
    </table>
</div>

</body>
</html>
